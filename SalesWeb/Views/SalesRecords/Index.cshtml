
@{
    ViewData["Title"] = "Sales Records";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="SimpleSearch">
            <fieldset>
                <legend>Simple Search</legend>
                <div class="form-group">
                    <label for="initialDate" class="col-lg-2 control-label">Initial Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="initialDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="finalDate" class="col-lg-2 control-label">Final Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="finalDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <input type="submit" class="btn btn-primary" value="Submit"/>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="GroupingSearch">
            <fieldset>
                <legend>Grouping Search</legend>
                <div class="form-group">
                    <label for="initialDate" class="col-lg-2 control-label">Initial Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="initialDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="finalDate" class="col-lg-2 control-label">Final Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="finalDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <input type="submit" class="btn btn-primary" value="Submit" />
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

